{
    "name": "huglester/pyrocms-plugin-tnavigation",
    "type": "pyrocms-plugin",
    "license": "MIT",
    "description": "PyroCMS Translated navigation plugin",
    "keywords": [
        "pyrocms", "plugin"
    ],

    "homepage": "https://github.com/huglester/pyrocms-plugin-tnavigation/",
    "authors": [
        {
            "name": "Jaroslav Petrusevic",
            "email": "huglester@gmail.com",
            "homepage": "http://www.webas.lt"
        }
    ],

    "require": {
        "composer/installers": "~1.0"
    },

    "repositories": [
        {
            "type": "vcs",
            "url":  "https://github.com/huglester/installers"
        }
    ],

    "scripts": {
        "post-install-cmd": "shell_exec(\"cp 'vendor/huglester/pyrocms-plugin-tnavigation/tnavigation.php' 'addons/shared_addons/plugins/'\")",
        "post-update-cmd": "shell_exec('copy vendor/huglester/pyrocms-plugin-tnavigation/tnavigation.php addons/shared_addons/plugins/')"
    }

}
